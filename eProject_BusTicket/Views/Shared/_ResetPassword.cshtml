@model ResetPasswordViewModel
@{
    Layout = null;
}
@if (@ViewBag.Noti != null)
{
    @Html.Raw(ViewBag.Noti)
}
else
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Email Address", @required = "rerequired" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @placeholder = "New password", @required = "rerequired" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", @placeholder = "Confirm new password", @required = "rerequired" })
    </div>

    <input type="submit" value="Reset" class="btn btn-danger btn-user btn-block" />
}
