@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

@{
    Layout = null;
}
<link href="/Areas/Admin/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<!-- Custom styles for this template-->
<link href="/Areas/Admin/Assets/css/sb-admin-2.min.css" rel="stylesheet">
<link href="~/Content/Loading.css" rel="stylesheet" />
<div style="height: 100%" class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                        <p class="mb-4">
                                            We get it, stuff happens. Just enter your email address below
                                            and we'll send you a link to reset your password!
                                        </p>
                                    </div>

                                    @using (Ajax.BeginForm("ForgotPassword", "Account", new AjaxOptions()
                                    {
                                        HttpMethod = "Post",
                                        OnBegin = "begin",
                                        OnComplete = "complete",
                                        UpdateTargetId = "partialView"
                                    }, new { @class = "user", @id = "partialView" }
                                    ))
                                    {
                                       
                                        @Html.Partial("_ForgotPassword")
                                    }
                                    <hr>
                                    <div class="text-center">
                                        @Html.ActionLink("Register a new user?", "Register")
                                    </div>
                                    <div class="text-center">
                                        @Html.ActionLink("Already have an account? Login!", "Login")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="overlay">
    <div class="cv-spinner">
        <span class="spinner"></span>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    var load = document.getElementById("overlay");
    function begin() {
        load.style.display = "block";
    }
    function complete() {
        load.style.display = "none";
    }
</script>
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
