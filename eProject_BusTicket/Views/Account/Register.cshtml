@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@{
    Layout = null;
}
<link href="/Areas/Admin/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<link href="/Areas/Admin/Assets/css/sb-admin-2.min.css" rel="stylesheet">
<link href="~/Content/Loading.css" rel="stylesheet" />
<div style="height: 100%" class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                    </div>
                                    @using (Ajax.BeginForm("Register", "Account", new AjaxOptions()
                                    {
                                        HttpMethod = "Post",
                                        OnBegin = "begin",
                                        OnComplete = "complete",
                                        UpdateTargetId = "partialView"
                                    }, new { @class = "user", @id = "partialView" }
                                        ))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        @Html.Partial("_ConfirmEmail")
                                        <div class="form-group">
                                            <input type="text" name="FullName" class="form-control form-control-user" id="exampleInputFullName"
                                                   placeholder="Full Name" required>
                                        </div>
                                        <div class="form-group">
                                            <input name="Email" type="email" class="form-control form-control-user" id="exampleInputEmail"
                                                   placeholder="Email Address" required>
                                        </div>
                                        <div class="form-group">
                                            <input name="PhoneNumber" type="text" class="form-control form-control-user" id="exampleInputPhoneNumber"
                                                   placeholder="Phone Number" required>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                <input name="Password" type="password" class="form-control form-control-user"
                                                       id="exampleInputPassword" placeholder="Password" required>
                                            </div>
                                            <div class="col-sm-6">
                                                <input name="ConfirmPassword" type="password" class="form-control form-control-user"
                                                       id="exampleConfirmPassword" placeholder="Confirm Password" required>
                                            </div>
                                        </div>
                                        <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block" />
                                    }
                                    <hr>
                                    <div class="text-center">
                                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                    </div>
                                    <div class="text-center">
                                        @Html.ActionLink("Already have an account? Login!", "Login")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="overlay">
    <div class="cv-spinner">
        <span class="spinner"></span>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    var load = document.getElementById("overlay");
    function begin() {
        load.style.display = "block";
    }
    function complete() {
        load.style.display = "none";
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
