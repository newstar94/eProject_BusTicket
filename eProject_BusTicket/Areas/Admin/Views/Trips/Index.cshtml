@model IEnumerable<eProject_BusTicket.ViewModels.TripVM>

@{
    ViewBag.Title = "Trip";
}

<h2>Trip</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new {@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trip.Vehicle.TypeofVehicle.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.Vehicle.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.CodeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.Origin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.Destination)
        </th>
        <th>
            Distance
        </th>
        <th>
            Time
        </th>
        <th>
            Pick up points
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.IsActive)
        </th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Vehicle.TypeofVehicle.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Vehicle.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.CodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Destination)
            </td>
            <td>
                @item.Routes.Max(r => r.Distance) km
            </td>
            <td>
                @if (item.Stations.Count > 2)
                {
                    <span>
                        @(item.Routes[0].Duration + (item.Stations.Count - 2) * 7) mins
                    </span>
                }
                else
                {
                    <span>
                        @(item.Routes[0].Duration) mins
                    </span>
                }
            </td>
            <td>
                @item.Stations.Count()
            </td>
            <td>
                <button class="status" data-id=@item.Trip.TripID>@(item.Trip.IsActive ? "Active" : "Disable")</button>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Trip.TripID }, new { @class="btn btn-info"})
            </td>
        </tr>
    }
</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    const statuslist = document.getElementsByClassName('status');
    for (const status of statuslist) {
        if (status.textContent == 'Active') {
            status.classList.add('btn', 'btn-success');
        } else if (status.textContent == 'Disable') {
            status.classList.add('btn', 'btn-danger');
        }
    }

    $('.status').on('click',
        function () {
            var btn = $(this)
            var id = $(this).data('id');
            $.ajax({
                url: "/Trips/ChangeStatus",
                data: { id: id },
                dataType: "json",
                type: "Post",
                success: function (response) {
                    if (response == true) {
                        btn.text('Active');
                        btn.removeClass("btn-danger").addClass("btn-success");
                    } else {
                        btn.text('Disable');
                        btn.removeClass("btn-success").addClass("btn-danger");
                    }
                }
            });
        });
</script>